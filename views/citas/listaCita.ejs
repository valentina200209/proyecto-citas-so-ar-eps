<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login | Soñar EPS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <header class="bg-primary text-white p-3">
    <div class="container d-flex justify-content-between align-items-center">
      <h1 class="h3">SOÑAR EPS</h1>
      <nav>
        <a href="/citas/inicio" class="text-white me-3">Inicio</a>
        <a href="/citas" class="text-white me-3">Login</a>
        <a href="/usuarios/contacto" class="text-white me-3">Contáctanos</a>
      </nav>
    </div>
  </header>

  <!-- Formulario de Login -->
  <div class="container mt-5">
    <h3 class="text-center mb-4">Iniciar Sesión</h3>
    <form action="/usuarios/login" method="POST" class="w-50 mx-auto">
      <div class="mb-3">
        <label for="correo" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="correo" name="correo" required>
      </div>
      <div class="mb-3">
        <label for="contrasena" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="contrasena" name="contrasena" required>
      </div>
      <div class="mb-3">
        <label for="rol" class="form-label">Rol</label>
        <select class="form-select" id="rol" name="rol" required>
          <option value="">Seleccionar...</option>
          <option value="usuario">Usuario</option>
          <option value="funcionario">Funcionario Médico</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>

      <!-- Mostrar error si es necesario -->
      <% if (error) { %>
        <div class="alert alert-danger mt-3">
          <%= error %>
        </div>
      <% } %>
    </form>

    <div class="text-center mt-3">
      <button class="btn btn-link" data-bs-toggle="modal" data-bs-target="#registroModal">¿No tienes cuenta? Regístrate</button>
    </div>
  </div>

  <!-- Modal Registro -->
  <div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="registroModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form id="registroForm" class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="registroModalLabel">Registro de Usuario</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="registroNombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="registroNombre" name="nombre" required>
          </div>
          <div class="mb-3">
            <label for="registroEmail" class="form-label">Correo</label>
            <input type="email" class="form-control" id="registroEmail" name="correo" required>
          </div>
          <div class="mb-3">
            <label for="registroPassword" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="registroPassword" name="contrasena" required>
          </div>
          <div class="mb-3">
            <label for="registroRol" class="form-label">Rol</label>
            <select class="form-select" id="registroRol" name="rol" required>
              <option value="">Selecciona un rol</option>
              <option value="usuario">Usuario</option>
              <option value="funcionario">Funcionario Médico</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary">Registrarse</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/login.js"></script>
</body>
</html>
